mq1200_1600 = 'screen and (min-width: 1200px) and (max-width: 1600px)'
mq1600_1900 = 'screen and (min-width: 1600px) and (max-width: 1900px)'

.b-home 
	margin-left 300px
	position relative
	clearfix()
	
