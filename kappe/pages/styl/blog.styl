@import 'nib'

mq768_1000 = 'screen and (min-width: 768px) and (max-width: 999px)'
mq1000_1280 = 'screen and (min-width: 1000px) and (max-width: 1279px)'
mq1280_1440 = 'screen and (min-width: 1280px) and (max-width: 1439px)'
mq1440 = 'screen and (min-width: 1440px)'

.b-blog
	margin-left 300px
	//padding 15px
	
.b-blog-inner
	margin 0 auto
	padding-top 5px	
	clearfix()	
	
	@media mq1440
		width 1074px
		
	@media mq1280_1440 
		width 920px	
		
	@media mq1000_1280
		width 612px	
		
	@media mq768_1000
		width 460px	
	
.b-blog-inner__item
	width 140px
	margin 5px
	display inline-block
	vertical-align middle	
	background #FFF 
	position relative
	border-radius  3px
	border-top-right-radius 0
	border-top-left-radius 0
	
	a 
		text-decoration none
	
	&:after 
		content ''
		display block
		position absolute
		top 0
		left 0
		width 100%
		height 53%
		cursor pointer
		
		
	&:hover 
		.b-blog-item_anch
			opacity 1
			visibility visible	

.b-blog-item_anch
	position absolute
	top 20%
	left 40% 
	z-index 1
	width 61px
	height 61px
	border 1px solid #fff 
	border-radius 50% 
	color #FFF 
	cursor pointer
	visibility hidden
	opacity 0
	transition opacity .2s ease, visibility .2s ease
	
.b-blog-item__img	
	width 140px
	height 160px
	overflow hidden
	background #EEE
	
	img 
		display block
		width 140px
		height 160px
		
.b-blog-item__text	
	padding 10px 10px 
	border-bottom 1px solid #e3e3e3
	
		
	h4 
		font-size 14px
		line-height 20px
		font-weight 300
		color #000 
		
	p 
		font-size 12px
		line-height 20px
		color #9C9C9C
		font-weight 300 	

.b-blog-item__comments	
	padding 10px 10px
	
	p 
		display inline-block
		color #9A9A9A 

	a 
		font-size 13px
		line-height 22px
		font-weight 300
		text-decoration none
		padding-left 8px
		
