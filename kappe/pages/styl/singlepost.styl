@import 'nib'

mq768_1000 = 'screen and (min-width: 768px) and (max-width: 999px)'
mq1000_1280 = 'screen and (min-width: 1000px) and (max-width: 1279px)'
mq1280_1440 = 'screen and (min-width: 1280px) and (max-width: 1439px)'
mq1440 = 'screen and (min-width: 1440px)'

.b-singlepost
	margin-left 300px
	padding 15px
	
.b-singlepost-inner
	background #FFF 
	padding 15px
	margin 0 auto 	
	clearfix()	
	
	@media mq1440
		width 1000px
	
.b-post-item
	
	h2 
		font-size 24px
		line-height 26px
		color #000
		font-weight 300
		padding 0 0 16px

	
.b-post__img
	width 280px
	height 320px
	display inline-block
	vertical-align top

	img 
		display block	
		width 280px
		height 320px

.b-post-info 
	display inline-block
	vertical-align top
	width 500px
	margin-left 120px
	
	ul 
		li 
			height 47px 
			margin-top 14px
			border-bottom 1px solid #e5e5e5 
			
			a 		
				font-size 14px
				line-height 30px
				color #848484
				font-weight 300
				text-decoration none 
				padding-left 18px
				
			i 
				width 32px
				height 32px
				border 1px solid #1AB5B3
				border-radius 50%
				color #1AB5B3
				text-align center
				padding-top 7px
	
.b-about-skill
	margin-top 12px

.b-about-skill__name
	p 
		font-size 15px
		line-height 26px
		color #000
		font-weight 300	
		position relative
		
		span 
			position absolute
			top 0
			right 0
			color #000
			
.b-about-skill_percent
	margin-top 5px
	width 100%
	height 32px
	border 1px solid #e2e2e2
	position relative
	text-align center
	
.b-about-skill__bg
	background #e2e2e2
	width 89%
	height 100%	

.voices
	position absolute
	top 9px
	font-size 14px
	color #fff
	font-weight 400  
	

.b-post-text
	display inline-block
	vertical-align top
	padding 20px 
	margin-top 10px
	width 60%
	border-bottom 1px solid #e5e5e5
	
	p 
		font-size 14px
		line-height 20px
		color #A3A3A3
		font-weight 300 

.b-post-tags
	display inline-block
	width 30%
	margin-top 28px
	margin-left 30px
	padding-bottom 28px
	
	h4 
		font-size 24px
		line-height 26px
		color #000
		font-weight 300
		padding-bottom 21px		
		
	ul 
		clearfix() 
		
		li 
			float left
			margin 2px 5px
			
			a 
				text-decoration none
				font-size 13px
				line-height 32px
				color #A3A3A3
				font-weight 300 
				display block
				width 100%
				padding 0 15px
				border 1px solid #e5e5e5
				border-radius 10px	
				transition background .2s ease
				
				&:hover 
					background #1AB5B3
					color #FFF


.b-singlepost-comments
	margin-top 30px	
	
	h4 
		font-size 22px
		line-height 24px
		color #000
		font-weight 300 			
	
.b-singlepost-comments-items
	width 60%
	
.b-singlepost-comments__item
	margin-top 25px
	width 100%
	
.b-singlepost-item__foto
	display inline-block
	vertical-align top
	width 80px
	height 80px
	background #CCC
	
	img 
		display block
		
.b-singlepost-item__body
	display inline-block
	vertical-align top
	padding-left 18px
	
	h5 
		display inline-block
		padding-bottom 5px
		border-bottom 1px solid #e5e5e5 
		color #D1D1D1	
	
	p 
		font-size 14px
		line-height 20px
		color #A3A3A3
		font-weight 300
		padding-top 13px 
	
	a 
		font-size 13px
		line-height 18px
		font-weight 300 
		color #3c3c3c	
		text-decoration none

	span 
		font-size 12px
		line-height 18px
		font-weight 300 
		color #D1D1D1			

.b-singlepost-comments-leave	
	margin-top 29px
	width 60%
	
	h4 
		font-size 22px
		line-height 24px
		color #000
		font-weight 300 
		padding-bottom 10px
		
	form 
		width 100%
		
.b-input
	margin-top 10px
	width 100%
	
	input 
		width 100%
		height 56px
		border 1px solid #e5e5e5
		font-size 14px
		line-height 30px
		color #848484
		padding-left 15px
		outline none
		
	textarea 
		height 126px
		width 100%
		border 1px solid #e5e5e5
		font-size 14px
		line-height 30px
		color #848484
		padding-left 15px
		outline none	
		resize none
		
.b-input-submit 
	
	input 
		background #1AB5B3
		color #FFF
		cursor pointer
		
	

				