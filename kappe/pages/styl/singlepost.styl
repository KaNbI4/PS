@import 'nib'

mq768_1000 = 'screen and (min-width: 768px) and (max-width: 999px)'
mq1000_1280 = 'screen and (min-width: 1000px) and (max-width: 1279px)'
mq1280_1440 = 'screen and (min-width: 1280px) and (max-width: 1439px)'
mq1440 = 'screen and (min-width: 1440px)'

.b-singlepost
	margin-left 300px
	padding 15px
	
.b-singlepost-inner
	background #FFF 
	padding 15px 30px
	margin 0 auto 	
	clearfix()	
	
	@media mq1440
		width 1040px
	
		
	@media mq1280_1440
		width 910px
		
	@media mq1000_1280
		width 650px	

	@media mq768_1000
		width 390px
	
.b-post-item
	border-bottom 1px solid #e5e5e5
	clearfix()
	
	h2 
		font-size 24px
		line-height 26px
		color #000
		font-weight 300
		padding 0 0 16px

	
.b-post__img
	width 220px
	height 340px
	display inline-block
	vertical-align top

	img 
		display block	
		width 220px
		height 340px

.b-post-info 
	display inline-block
	vertical-align top
	margin-left 20px
	
	ul 
		li 
			height 30px 
			
			a 		
				font-size 14px
				line-height 30px
				color #848484
				font-weight 300
				text-decoration none 
				padding-left 18px
				
				&:hover 
					text-decoration underline
				
			span 
				font-size 12px
	
.b-singlepost-rating
	display inline-block
	width 140px
	margin-left 210px
	text-align center
  	
 .b-singlepost-rating__mark
	font-size 5em
	font-family 'Pinyon Script' cursive 	
	
.b-singlepost-rating__voices
	p 
		font-size 12px
		font-weight 300
		color #848484
		line-height 16px 
		
		span 
			text-decoration underline 
			color #1FAAA8

.b-singlepost-rating__vote	
	text-align center
	padding-top 10px 
			 		
	ul 
		li 
			display inline-block	
			cursor pointer
			

.voices
	position absolute
	top 9px
	font-size 14px
	color #fff
	font-weight 400  
	

.b-post-text
	display inline-block
	vertical-align top
	padding 20px 
	margin-top 10px
	
	p 
		font-size 14px
		line-height 20px
		color #A3A3A3
		font-weight 300 

		
.next 
	position absolute
	z-index 1
	display block
	width 45px
	height 140px
	top 0
	right 0
	color #848484
	padding-top 45px
	text-align center
	font-size 3em
	
	&:hover 
		padding-top 43px
		font-size 3.2em

.prev 
	position absolute
	z-index 1
	display block
	width 45px
	height 140px
	top 0
	left 0	
	color #848484	
	padding-top 45px
	text-align center
	font-size 3em	
	
	&:hover 
		padding-top 43px
		font-size 3.2em

.b-samebooks
	clearfix()
	
	h4 
		font-size 22px
		line-height 24px
		color #000
		font-weight 300 	
		
.b-samebooks-wrap
	width 980px
	margin 0 auto
	margin-top 20px
	position relative

.b-samebooks-slider
	margin 0 auto
	width 895px
	clearfix()

.b-samebooks-item
	float left
	width 120px
	height 140px
	margin-left 7px
	
	
	img 
		display block 
		width 120px
		height 140px

.b-singlepost-comments
	margin-top 30px	
	
	h4 
		font-size 22px
		line-height 24px
		color #000
		font-weight 300 			
	
.b-singlepost-comments-items
	width 60%
	
.b-singlepost-comments__item
	margin-top 25px
	width 100%
	
.b-singlepost-item__foto
	display inline-block
	vertical-align top
	width 80px
	height 80px
	background #CCC
	
	img 
		display block
		
.b-singlepost-item__body
	display inline-block
	vertical-align top
	padding-left 18px
	
	h5 
		display inline-block
		padding-bottom 5px
		border-bottom 1px solid #e5e5e5 
		color #D1D1D1	
	
	p 
		font-size 14px
		line-height 20px
		color #A3A3A3
		font-weight 300
		padding-top 13px 
	
	a 
		font-size 13px
		line-height 18px
		font-weight 300 
		color #3c3c3c	
		text-decoration none

	span 
		font-size 12px
		line-height 18px
		font-weight 300 
		color #D1D1D1			

.b-singlepost-comments-leave	
	margin-top 29px
	width 60%
	
	h4 
		font-size 22px
		line-height 24px
		color #000
		font-weight 300 
		padding-bottom 10px
		
	form 
		width 100%
		
.b-input
	margin-top 10px
	width 100%
	
	input 
		width 100%
		height 56px
		border 1px solid #e5e5e5
		font-size 14px
		line-height 30px
		color #848484
		padding-left 15px
		outline none
		
	textarea 
		height 126px
		width 100%
		border 1px solid #e5e5e5
		font-size 14px
		line-height 30px
		color #848484
		padding-left 15px
		outline none	
		resize none
		
.b-input-submit 
	
	input 
		background #1AB5B3
		color #FFF
		cursor pointer
		
	

				