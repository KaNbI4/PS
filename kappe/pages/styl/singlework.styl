@import 'nib'

.b-singlework
	margin-left 300px
	padding 15px
	
.b-siglework-inner
	background #FFF 
	padding 30px	
	clearfix()	
	
.b-sigle-left
	float left	
	overflow hidden
	width 750px
	padding-right 30px
	border-right 1px solid #e5e5e5
	
.b-single-left__img
	width 721px
	height 560px
	background orange 
	img 
		display block	
	

.b-single-left__text	
	padding-bottom 25px
	border-bottom 1px solid #e5e5e5 
	h4 
		font-size 24px
		line-height 26px
		color #000
		font-weight 300
		padding 22px 0 16px
		
	p 
		font-size 18px
		line-height 30px
		color #A3A3A3
		font-weight 300 	
		
	p + p 
		margin-top 36px	
		 
.b-single-left__projects
	clearfix() 
	
	h4 
		font-size 24px
		line-height 26px
		color #000
		font-weight 300
		padding 30px 0 25px


.b-projects__item
	float left
	width 240px
	height 182px
	background orange 
	
	img 
		display block		


/* right side */	
.b-sigle-right
	float right
	width 750px
	margin-right 0
	padding-left 30px
	
.b-sigle-right__project-info
	padding-bottom 30px
	
	h4 
		font-size 24px
		line-height 26px
		color #000
		font-weight 300
		padding-bottom 6px
		
.b-project-info 
	ul 
		li 
			height 47px 
			margin-top 14px
			border-bottom 1px solid #e5e5e5 
			
			a 		
				font-size 14px
				line-height 30px
				color #848484
				font-weight 300
				text-decoration none 
				padding-left 18px
				
			i 
				width 32px
				height 32px
				border 1px solid #1AB5B3
				border-radius 50%
				color #1AB5B3
				text-align center
				padding-top 8px
				
.b-project-tags
	padding-bottom 28px
	
	h4 
		font-size 24px
		line-height 26px
		color #000
		font-weight 300
		padding-bottom 21px		
		
	ul 
		clearfix() 
		
		li 
			float left
			margin-right 15px
			
			a 
				text-decoration none
				font-size 13px
				line-height 32px
				color #A3A3A3
				font-weight 300 
				display block
				width 100%
				padding 0 15px
				border 1px solid #e5e5e5
				border-radius 10px	
				transition background .2s ease
				
				&:hover 
					background #1AB5B3
					color #FFF

.b-project-gallery
	padding-bottom 28px
	clearfix() 
	
	h4 
		font-size 24px
		line-height 26px
		color #000
		font-weight 300
		padding-bottom 21px	
		
.b-project-gallery__item
	width 78px
	height 78px
	float left
	background orange 
	margin-right 15px
	
	img 
		display block			
		
.b-project-features 
	h4 
		font-size 24px
		line-height 26px
		color #000
		font-weight 300
		padding-bottom 13px	
		
	ul 
		li 
			a 
				font-size 14px
				line-height 30px
				color #848484
				font-weight 300
				text-decoration none 			