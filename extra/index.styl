@import 'nib'

@font-face
	font-family monb
	src url(../fonts/Montserrat-Bold.ttf)
	
@font-face
	font-family monr
	src url(../fonts/Montserrat-Regular.ttf)	 
	
hcolor = #252525


clear()
	&:after
		content ""
		clear both
		display block
		width 0
		height 0
		visibility hidden
		


body 
	font-size 16px
	line-height 1em
	font-family monr 
	
	*
		box-sizing border-box  


header
	background hcolor 
	height 80px
	clear()
	
.b-header__logo	
	float left
	width 245px	
	font-family monr 
	font-size 18px
	line-height 20px
	color #fefefe
	text-transform uppercase 
	font-weight 300 
	background url(../img/head_logo.png) no-repeat 30px center
	padding 31px 0 33px 70px
	
	
	em 
		font-family monb 
		

.b-header-leftside
	float right
	width 270px	
	clear()
	
.b-header__share
	position relative
	width 108px
	font-size 14px
	line-height 18px
	font-family monb 
	color #FFF  
	text-transform uppercase
	border-left 1px solid #525252 
	text-align center
	padding 31px 0 	
	cursor pointer	
	float left
	
	&:hover 
		background #1c1c1c
		box-shadow 0 0 20px rgba(0, 0, 0, 1) inset
		
		.b-share
			display block

.b-share
	position absolute
	top 79px
	left -78px
	width 186px
	background #FFF
	border 1px solid #484848 
	display none

.b-share__item
	clear()
	transition background .3s ease
	
	&:hover 
		background #CCC
	
.b-item__left
	float left
	width 50px
	padding 10px 0
	text-align center
	border-bottom 1px solid #e7e7e7
	border-right 1px solid #e7e7e7
	
	span 
		width 20px
		height 20px
		display inline-block 
		
.facebook
	background url(../img/facebook.png) no-repeat center center
	
.twitter
	background url(../img/twitter.png) no-repeat center center			

.google 
	background url(../img/google.png) no-repeat center center	

.interest 
	background url(../img/interest.png) no-repeat center center	

.b-item__right
	float right
	width 134px
	font-size 13px
	line-height 44px
	color #323232
	font-weight 300
	text-transform uppercase 
	border-bottom 1px solid #e7e7e7
	
.b-header__search
	float left
	width 80px	
	border-left 1px solid #525252 
	text-align center
	padding 28px 0
	cursor pointer
	
	&:hover 
		background #1c1c1c
		box-shadow 0 0 20px rgba(0, 0, 0, 1) inset
	
	span 
		background url(../img/search.png) no-repeat center center
		display inline-block
		width 20px
		height 20px

.b-header__login
	float left
	width 82px	
	border-left 1px solid #525252 
	text-align center
	padding 28px 30px 
	cursor pointer
	
	&:hover 
		background #1c1c1c
		box-shadow 0 0 20px rgba(0, 0, 0, 1) inset
	
	span 
		background url(../img/login.png) no-repeat center center
		display inline-block
		width 20px
		height 20px		