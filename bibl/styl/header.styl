@import 'nib'

.b-header-top
	padding 20px 20px
	background #3A3A3A
	border-top-left-radius 3px
	border-top-right-radius 3px

.b-header-top__logo
	display inline-block
	vertical-align top
	width 107px
	
	span 
		display block
		width 107px
		height 20px
		background #fff

.b-header-top__login
	display inline-block
	vertical-align top
	width 115px
	margin-left 322px
	
	a 
		font-family helvetica 
		font-size 11px
		line-height 20px 
		text-decoration none
		color #9A9999
		
		&:hover 
			color #FFF

.login
	margin-right 15px
		
.b-header-bottom		
	background #fafafa


.b-header-top__search
	display inline-block
	vertical-align top
	width 190px
	margin-left 200px
	clearfix()
	
	form 
		clearfix()
	
	input[type='text'] 
		width 100%
		border 0
		border-radius 10px
		height 22px
		outline none
		padding 4px 10px
		
	input[type='submit']
		border 0
		width 19px
		height 19px
		
		

.b-input
	float left
	width 160px

.b-input-submit
	float right
	width 19px
	margin-left 5px
	position relative
	cursor pointer
	
	&:after 
		position absolute
		top 0
		left 0
		content ''
		width 100%
		height 100%
		background rgba(0, 0, 0, .1) 
		opacity 0
		visibility hidden
		transition opacity .3s ease, visibility .3s ease
		
	&:hover 
		&:after 
			opacity 1
			visibility visible					
	


.b-header-nav
	ul 
		clearfix()
		
		li 
			float left
			border-right 1px solid #e5e5e5
			 
			
			a 
				display block
				font-family helvetica 
				font-size 14px
				line-height 47px
				padding 0 20px 
				text-decoration none
				color #3A3A3A	
				transition background .3s ease
				
				&:hover 
					background #E3E3E3